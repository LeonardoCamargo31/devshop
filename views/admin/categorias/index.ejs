<%- include('../header')%>

<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop bg-primary">
    <div class="container clearfix">
        <h2 class="title-page">Admin</h2>

        <nav class="float-left">
            <ol class="breadcrumb text-white">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item" aria-current="page">Categorias</li>
            </ol>
        </nav>
    </div> <!-- container //  -->
</section>
<!-- ========================= SECTION INTRO END// ========================= -->

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content bg padding-y">
    <div class="container">

        <div class="row">
            <main class="col-sm-12">
                <a href="/admin/categorias/nova" class="btn btn-primary">Nova categoria</a>
                <% categorias.forEach(categoria=>{ %>
                <article class="card card-product">
                    <div class="card-body">
                        <div class="row">
                            <article class="col-sm-9">
                                <h4 class="title">
                                    <%= categoria.categoria %>
                                </h4>
                            </article>
                            <aside class="col-sm-3 border-left">
                                <div class="action-wrap">
                                    <a href="/admin/categorias/editar/<%= categoria.id %>" class="btn btn-primary">Editar</a>
                                    <a href="/admin/categorias/excluir/<%= categoria.id %>" class="btn btn-secondary">Excluir</a>
                                </div>
                            </aside>
                        </div> <!-- row.// -->
                    </div> <!-- card-body .// -->
                </article> <!-- card product .// -->
                <% }) %>
            </main> <!-- col.// -->
        </div>

    </div> <!-- container .//  -->
</section>


<%- include('../../partials/footer')%>